{
  "extends": "../tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "./lib",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
  },
  "compileOnSave": true,
  "include": ["src"],
  "references": [
    {
      "path": "../common"
    }
  ]}
